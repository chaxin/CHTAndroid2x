<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="43dp"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/control_share"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/draw_white2gray_sel"
        android:clickable="true"
        android:gravity="center">

        <TextView
            android:id="@+id/control_tv_share"
            style="@style/TextViewBody"
            android:drawableLeft="@drawable/icon_forum_share"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:text="分享" />

    </LinearLayout>

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/stroke"
        />

    <LinearLayout
        android:id="@+id/control_comment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/draw_white2gray_sel"
        android:clickable="true"
        android:gravity="center">

        <TextView
            android:id="@+id/control_tv_comment"
            style="@style/TextViewBody"
            android:drawableLeft="@drawable/icon_forum_write"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:text="评论" />
    </LinearLayout>

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/stroke"
        />

    <LinearLayout
        android:id="@+id/control_like"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/draw_white2gray_sel"
        android:clickable="true"
        android:gravity="center">

        <TextView
            android:id="@+id/control_tv_like"
            style="@style/TextViewBody"
            android:drawableLeft="@drawable/icon_forum_like"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:text="赞" />
    </LinearLayout>

</LinearLayout>
