<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="98dp"
    android:orientation="horizontal"
    android:paddingLeft="26dp"
    android:paddingRight="33dp"
    android:background="@drawable/draw_white2gray_sel"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="17dp">

            <TextView
                android:id="@+id/news_item_title"
                android:textStyle="normal"
                style="@style/ProductItemTitle" />

            <TextView
                android:id="@+id/news_item_date"
                style="@style/TextViewDate" />
        </LinearLayout>

        <TextView
            android:id="@+id/news_item_desc"
            style="@style/TextViewHomeDesc" />
    </LinearLayout>

    <ImageView
        android:id="@+id/news_item_image"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="39dp"
        android:scaleType="centerCrop"
        android:src="@drawable/default_load_image" />
</LinearLayout>
