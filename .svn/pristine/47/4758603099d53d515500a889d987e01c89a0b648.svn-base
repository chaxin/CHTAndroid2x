<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="7dp">

    <LinearLayout
        android:id="@+id/publish_ll_sale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:background="@drawable/solid_with_stroke_white2gray_sel"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="14dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@drawable/icon_publish_sale" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/publish_sale_title"
                android:textSize="@dimen/medium_text_size"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/publish_sale_desc"
                android:lineSpacingExtra="3dp"
                android:textSize="@dimen/text_caption"
                android:textColor="@color/text_body" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/publish_ll_buy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/solid_with_stroke_white2gray_sel"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="14dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@drawable/icon_publish_buy" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/publish_buy_title"
                android:textSize="@dimen/medium_text_size"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3dp"
                android:text="@string/publish_buy_desc"
                android:textColor="@color/text_body"
                android:textSize="@dimen/text_caption"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>