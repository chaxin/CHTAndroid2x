<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <item android:state_selected="true">
        
        <layer-list>
 
		    <!-- 连框颜色值 -->
		    <item>
		        <shape>
		            <solid android:color="@color/primary" />
		        </shape>
		    </item>
		    <!-- 主体背景颜色值 -->
		    <item
		        android:top="1dp"
		        android:left="1dp"
		        android:right="1dp">
		        <shape>
		            <solid android:color="#ffffff" />
		        </shape>
		    </item>
		    
		</layer-list>
        
    </item>
    
    <item android:state_selected="false" android:drawable="@color/primary" />
    
</selector>