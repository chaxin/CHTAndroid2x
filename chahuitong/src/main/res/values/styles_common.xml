<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 标题样式 -->
    <style name="TextViewTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 段落文本样式 -->
    <style name="TextViewBody">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textColor">@color/text_body</item>
    </style>

    <style name="TextViewCaption">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_caption</item>
        <item name="android:textColor">@color/text_caption</item>
    </style>

    <style name="CommonButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:layout_marginLeft">18dp</item>
        <item name="android:layout_marginRight">18dp</item>
        <item name="android:layout_marginBottom">18dp</item>
        <item name="android:background">@drawable/correct_primary2dark_sel</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="CommonEditText" parent="TextViewBody">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="CommonTopBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/top_bar_height</item>
        <item name="android:background">@color/primary</item>
        <item name="com.damenghai.chahuitong:titleTextColor">@android:color/white</item>
        <item name="com.damenghai.chahuitong:titleTextSize">@dimen/text_title</item>
        <item name="com.damenghai.chahuitong:leftSrc">@drawable/back_text_normal</item>
        <item name="com.damenghai.chahuitong:rightSrc">@drawable/home_text_normal</item>
    </style>

    <!-- 商城公告弹窗 -->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>