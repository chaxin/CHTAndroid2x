<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar"/>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- 首页 -->
    <!-- 底部标签 -->
    <style name="home_tab">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@drawable/home_tab_text_selector</item>
        <item name="android:textSize">@dimen/micro_middle_text_size</item>
        <item name="android:button">@null</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:gravity">center|bottom</item>
    </style>
    <!-- 首页 -->

    <!-- 登录注册页 -->
    <!-- 登录注册标签 -->
    <style name="log_tab">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:drawableLeft">@drawable/triangle_indicator_selector</item>
    </style>

    <!-- 标签内容布局 -->
    <style name="log_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginBottom">50dp</item>
    </style>

    <!-- 登录注册页输入框 -->
    <style name="log_editText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:ems">10</item>
        <item name="android:background">@null</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textSize">@dimen/text_body</item>
    </style>

    <!-- 登录注册页分割线 -->
    <style name="log_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider_login</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <!-- 茶市发布产品页 -->

    <!-- 发布产品页分割线 -->
    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:color">@color/divider</item>
    </style>

    <!-- 每一行产品信息 -->
    <style name="publish_product_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- 发布产品页标签样式 -->
    <style name="publish_product_label">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">@dimen/text_title</item>
    </style>

    <!-- 发布产品页输入框 -->
    <style name="publish_product_input">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/text_title</item>
    </style>

    <!-- 茶市发布产品页 -->

    <!--2.0-->
    <style name="PrimaryTextIndicators" parent="AppTheme">
        <item name="vpiTabPageIndicatorStyle">@style/PrimaryTextTab</item>
    </style>

    <style name="WhiteTextTranIndicators" parent="AppTheme">
        <item name="vpiTabPageIndicatorStyle">@style/WhiteTextTransTab</item>
    </style>

    <style name="GrayTextPrimaryIndicators" parent="AppTheme">
        <item name="vpiTabPageIndicatorStyle">@style/GrayTextPrimaryTab</item>
    </style>

    <!-- 主色文本主色标签 -->
    <style name="PrimaryTextTab" parent="Widget.TabPageIndicator">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">@drawable/layerlist_primary_tab_sel</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:baselineAligned">false</item>
    </style>

    <!-- 白色文本暗主色背景 -->
    <style name="WhiteTextTransTab" parent="Widget.TabPageIndicator">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:background">@drawable/draw_primary2dark_sel</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- 灰色文本主色标签 -->
    <style name="GrayTextPrimaryTab">
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">11dip</item>
        <item name="android:paddingRight">11dip</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@drawable/color_gray2primary_sel</item>
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:background">@drawable/layerlist_primary_tab_sel</item>
    </style>
    
    <style name="DialogLoadding" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textSize">16.0sp</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>

    <!-- 首页按钮 -->
    <style name="HomeButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/micro_middle_text_size</item>
        <item name="android:textColor">@color/text_caption</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/draw_white2gray_sel</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:drawablePadding">-1dp</item>
        <item name="android:minHeight">32dp</item>
    </style>

    <!-- 标题 -->
    <style name="TextViewTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxEms">10</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_title</item>
    </style>

    <!-- 段落文本样式 -->
    <style name="TextViewBody">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textColor">@color/text_body</item>
    </style>

    <style name="TextViewCaption">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_caption</item>
        <item name="android:textColor">@color/text_caption</item>
    </style>

    <style name="CommonButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:layout_margin">18dp</item>
        <item name="android:background">@drawable/correct_primary2dark_sel</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="CommonEditText" parent="TextViewBody">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- 首页描述 -->
    <style name="TextViewDate">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:textColor">@color/text_body</item>
    </style>

    <!-- 首页描述 -->
    <style name="TextViewHomeDesc">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textColor">@color/text_body</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>

    <!-- 首页产品总体布局 -->
    <style name="LinearLayoutHomeProduct">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">12</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <!-- 首页产品图片 -->
    <style name="ImageViewHomeProduct">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="GridView">
        <item name="android:verticalSpacing">6dp</item>
        <item name="android:horizontalSpacing">6dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:listSelector">@color/background</item>
        <item name="android:background">@color/background</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 文章详情页进入和结束动画 -->
    <style name="PopupWindowAnim">
        <item name="android:windowEnterAnimation">@anim/slide_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom_out</item>
    </style>

    <!-- 更多文本样式 -->
    <style name="TextMore">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:text">@string/more</item>
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textColor">@color/text_body</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/draw_white2gray_sel</item>
    </style>
</resources>