<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="SplashTheme" parent="android:Theme.Black.NoTitleBar.Fullscreen"></style>

    <!-- 首页 -->
    <!-- 底部标签 -->
    <style name="home_tab">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@drawable/home_tab_text_selector</item>
        <item name="android:textSize">@dimen/micro_middle_text_size</item>
        <item name="android:button">@null</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:gravity">center|bottom</item>
    </style>
    <!-- 首页 -->

    <!-- 登录注册页 -->
    <!-- 登录注册标签 -->
    <style name="log_tab">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:drawableLeft">@drawable/triangle_indicator_selector</item>
    </style>

    <!-- 标签内容布局 -->
    <style name="log_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/register_background</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">50dp</item>
    </style>

    <!-- 登录注册页输入框 -->
    <style name="log_editText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:ems">10</item>
        <item name="android:background">@null</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <!-- 登录注册页分割线 -->
    <style name="log_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider_login</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <!-- 登录注册页按钮样式 -->
    <style name="log_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">9dp</item>
        <item name="android:paddingBottom">9dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:background">@color/primary</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>
    <!-- 登录注册页 -->

    <!-- 茶市发布产品页 -->

    <!-- 发布产品页分割线 -->
    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:color">@color/divider</item>
    </style>

    <!-- 每一行产品信息 -->
    <style name="publish_product_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- 发布产品页标签样式 -->
    <style name="publish_product_label">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <!-- 发布产品页输入框 -->
    <style name="publish_product_input">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <!-- 茶市发布产品页 -->

    <!--2.0-->
    <style name="StyledIndicators" parent="AppTheme">
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
    </style>

    <style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">@drawable/layerlist_white_tab_sel</item>
        <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="StyledIndicators." parent="AppTheme">
        <item name="vpiTabPageIndicatorStyle">@style/Primary2DarkTabPageIndicator</item>
    </style>

    <style name="Primary2DarkTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:background">@drawable/draw_primary2dark_sel</item>
        <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
    </style>

    <style name="CustomTabPageIndicator.Text" parent="android:TextAppearance.Medium">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="StyledIndicators.." parent="AppTheme">
        <item name="vpiTabPageIndicatorStyle">@style/PrimaryTabPageIndicator</item>
    </style>
    
    <style name="PrimaryTabPageIndicator">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/layerlist_primary_tab_sel</item>
        <item name="android:paddingLeft">11dip</item>
        <item name="android:paddingRight">11dip</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@drawable/color_gray2primary_sel</item>
        <item name="android:textSize">@dimen/body_text_size</item>
    </style>
    
    <style name="DialogLoadding" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
    </style>

    <!-- 首页按钮 -->
    <style name="HomeButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/micro_middle_text_size</item>
        <item name="android:textColor">@color/caption</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/draw_white2gray_sel</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:drawablePadding">-1dp</item>
        <item name="android:minHeight">32dp</item>
    </style>

    <!-- 标题 -->
    <style name="TextViewTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxEms">10</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <!-- 首页描述 -->
    <style name="TextViewDate">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:textColor">@color/text_body</item>
    </style>

    <!-- 首页描述 -->
    <style name="TextViewHomeDesc">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">@dimen/body_text_size</item>
        <item name="android:textColor">@color/text_body</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>

    <!-- 首页产品总体布局 -->
    <style name="LinearLayoutHomeProduct">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">12</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <!-- 首页产品图片 -->
    <style name="ImageViewHomeProduct">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="GridView">
        <item name="android:verticalSpacing">6dp</item>
        <item name="android:horizontalSpacing">6dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:listSelector">@color/backcolor</item>
        <item name="android:background">@color/backcolor</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 文章详情页进入和结束动画 -->
    <style name="PopupWindowAnim">
        <item name="android:windowEnterAnimation">@anim/slide_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom_out</item>
    </style>

    <!-- 更多文本样式 -->
    <style name="TextMore">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:text">@string/more</item>
        <item name="android:textSize">@dimen/body_text_size</item>
        <item name="android:textColor">@color/text_body</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/draw_white2gray_sel</item>
    </style>
</resources>