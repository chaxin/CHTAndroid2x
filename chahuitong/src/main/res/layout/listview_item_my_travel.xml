<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/draw_white2gray_sel"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/travel_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="布郎山淘茶之旅"
            android:textSize="@dimen/text_title"
            android:textStyle="bold"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/travel_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"
            android:textColor="@color/primary"
            android:drawableLeft="@drawable/icon_my_event_delete"
            android:layout_gravity="center"
            android:layout_marginRight="8dp"
            />

        <TextView
            android:id="@+id/travel_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改"
            android:textColor="@color/primary"
            android:drawableLeft="@drawable/icon_edit"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/travel_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="布郎的优质自然和生态条件,布郎的优质自然和生态条件布郎的优质自然和生态条件布郎的优质自然和生态条件"
        android:textSize="@dimen/text_body"
        android:textColor="@color/text_body"
        android:maxLines="2"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/stroke"
        android:layout_marginBottom="15dp"
        />

    <TextView
        android:id="@+id/travel_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="活动时间：2015-09-10 早上9点30分"
        android:layout_marginBottom="4dp"
        android:textSize="@dimen/text_body"
        android:textColor="@color/text_body"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="状态："
            android:textColor="@color/text_body"
            android:textSize="@dimen/text_body"
            />

        <TextView
            android:id="@+id/travel_my_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已报名"
            android:textColor="@color/primary"
            android:textSize="@dimen/text_body"
            />

        <TextView
            android:id="@+id/travel_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  ( 即将开始 )"
            android:textColor="@color/text_body"
            android:textSize="@dimen/text_body"
            />
    </LinearLayout>



</LinearLayout>