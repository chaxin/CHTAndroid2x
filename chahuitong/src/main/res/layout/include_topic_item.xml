<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/topic_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当今的普洱茶的收藏价值怎么样"
            android:textSize="@dimen/title_text_size"
            android:textStyle="bold"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/topic_item_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="话题主理人：林林林"
            android:textColor="@color/caption"
            android:textSize="@dimen/caption_text_size"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/topic_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"
            android:textSize="@dimen/body_text_size"
            android:textColor="@color/primary"
            android:drawableLeft="@drawable/icon_coterie_delete"
            android:drawablePadding="4dp"
            android:visibility="gone"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/topic_item_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="26dp"
        android:maxLines="3"
        android:text="近几年的普洱茶越来越被大家所熟知和接受，普洱茶的收藏也被大家纷纷提出，其实普洱茶在很早的时候就已经被各大收藏家收藏，现如今"
        android:textColor="@color/text_body"
        android:textSize="@dimen/body_text_size" />

    <include layout="@layout/include_forum_controlbar" />

</LinearLayout>