<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/home_tv_title"
            style="@style/TextViewTitle"
            android:text="佤山映象冰岛古树普洱茶冰岛古树普洱茶冰岛古树普洱茶" />

        <TextView
            android:id="@+id/home_tv_favorites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1888"
            android:textColor="@color/text_body"
            android:textSize="@dimen/caption_text_size"
            android:gravity="right"
            android:drawableLeft="@drawable/icon_favorites"
            android:drawablePadding="2dp"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/home_tv_desc"
        style="@style/TextViewHomeDesc"
        android:text="独有的气质和原生态的生长环境独有的气质和原生态的生长环境独有的气质和原生态的生长环境" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="bottom"
        >
        <TextView
            android:id="@+id/home_tv_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="￥2,000"
            android:textColor="@color/primary"
            />

        <Button
            android:id="@+id/home_btn_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:background="@drawable/correct_primary2dark_sel"
            android:text="@string/show_detail"
            android:textSize="@dimen/micro_middle_text_size"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            />
    </LinearLayout>

</LinearLayout>
