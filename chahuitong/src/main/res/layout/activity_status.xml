<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.damenghai.chahuitong2.view.TopBar
        android:id="@+id/statuses_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:background="@color/primary"
        app:titleText="@string/timeline"
        app:titleTextSize="@dimen/text_title"
        app:titleTextColor="@android:color/white"
        app:leftSrc="@drawable/back_text_normal"
        app:rightSrc="@drawable/icon_write"
        />

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/statuses_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/background"
        android:dividerHeight="6dp"
        />

</LinearLayout>