<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<ImageView 
	    android:id="@+id/id_msg_img"
	    android:layout_width="50dp"
	    android:layout_height="50dp"
	    android:layout_margin="10dp"
	    android:scaleType="fitCenter"
	    android:src="@drawable/no_picture"
	    />
    
	<TextView 
	    android:id="@+id/id_tv_title_d"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_toRightOf="@id/id_msg_img"
	    android:layout_alignTop="@id/id_msg_img"
	    android:text="消息提示"
	    android:textSize="15sp"
	    android:textColor="@color/primary"
	    android:textStyle="bold"
	    android:singleLine="true"
	    />
	    
	<TextView 
	    android:id="@+id/id_tv_desc"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_toRightOf="@id/id_msg_img"
	    android:layout_alignLeft="@id/id_tv_title_d"
	    android:layout_alignBottom="@id/id_msg_img"
	    android:text="您的产品--有供求的信息"
	    android:textSize="15sp"
	    android:textColor="@color/primary"
	    android:singleLine="true"
	    />
</RelativeLayout>
