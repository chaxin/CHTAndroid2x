<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="43dp"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/control_share"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/draw_white2gray_sel"
        android:clickable="true"
        android:gravity="center">

        <TextView
            android:id="@+id/control_tv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_forum_share"
            android:gravity="center"
            android:text="20333" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/control_comment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/draw_white2gray_sel"
        android:clickable="true"
        android:gravity="center">

        <TextView
            android:id="@+id/control_tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_forum_write"
            android:gravity="center"
            android:text="20333" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/control_like"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/draw_white2gray_sel"
        android:clickable="true"
        android:gravity="center">

        <TextView
            android:id="@+id/control_tv_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_forum_like"
            android:gravity="center"
            android:text="20333" />
    </LinearLayout>

</LinearLayout>
