<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.damenghai.chahuitong.view.TopBar
        android:id="@+id/comment_bar"
        style="@style/CommonTopBar"
        app:titleText="@string/write_comment"
        />

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/comment_lv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:cacheColorHint="@android:color/transparent"
        android:listSelector="@android:color/transparent"
        android:divider="@color/stroke"
        android:dividerHeight="1px"
        android:clickable="false"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/stroke"
        />

    <include layout="@layout/include_forum_controlbar" />

    <Button
        android:id="@+id/write_comment"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:text="写评论"
        android:textColor="@android:color/white"
        style="@style/TextViewBody"
        android:background="@drawable/correct_primary2dark_sel"
        android:visibility="gone"
        />

</LinearLayout>