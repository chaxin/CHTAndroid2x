<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.damenghai.chahuitong.view.TopBar
        android:id="@+id/modify_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:background="@color/primary"
        app:titleTextColor="@android:color/white"
        app:titleTextSize="@dimen/text_title"
        app:leftSrc="@drawable/back_text_normal"
        app:rightSrc="@drawable/home_text_normal"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="24dp"
        >

        <EditText
            android:id="@+id/modify_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_underline"
            android:inputType="textPersonName"
            />

        <ImageView
            android:id="@+id/modify_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_image_delete"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/modify_commit"
        style="@style/CommonButton"
        android:text="@string/confirm"
        android:onClick="onClick"
        />

</LinearLayout>