<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:orientation="horizontal"
    android:background="@drawable/draw_white2gray_sel"
    >

    <ImageView
        android:id="@+id/mine_iv_image"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:scaleType="centerCrop"
        android:src="@drawable/default_load_image"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="18dp"
        android:paddingTop="18dp"
        android:paddingRight="18dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <TextView
                style="@style/ProductItemTitle"
                android:id="@+id/mine_tv_title"
                />

            <TextView
                style="@style/TextViewDate"
                android:id="@+id/mine_tv_date"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/mine_tv_price"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="@color/primary"
            android:textSize="@dimen/small_middle_text_size"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/background"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/my_product_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/text_body"
                android:textColor="@color/text_body"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:drawablePadding="2dp"
                android:singleLine="true"
                android:background="@drawable/draw_white2gray_sel"
                android:text="修改"
                android:drawableLeft="@drawable/icon_mine_edit"
                />

            <TextView
                android:id="@+id/mine_btn_delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/text_body"
                android:textColor="@color/text_body"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:drawablePadding="2dp"
                android:singleLine="true"
                android:background="@drawable/draw_white2gray_sel"
                android:text="删除"
                android:drawableLeft="@drawable/icon_mine_delete"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/text_body"
                android:textColor="@color/text_body"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:drawablePadding="2dp"
                android:singleLine="true"
                android:background="@drawable/draw_white2gray_sel"
                android:text="查看"
                android:drawableLeft="@drawable/icon_mine_detail"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>