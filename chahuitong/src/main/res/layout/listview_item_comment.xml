<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="15dp"
    android:paddingTop="23dp"
    android:paddingRight="23dp"
    android:paddingBottom="14dp"
    android:background="@drawable/draw_white2gray_sel"
    android:id="@+id/comment_rl"
    >

    <ImageView
        android:id="@+id/comment_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/test_leader_avatar"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="14dp"
        android:layout_toRightOf="@id/comment_avatar"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/comment_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="陈奕迅"
                android:textSize="@dimen/text_body"
                android:textStyle="bold"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/comment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015-8-5 09:40"
            android:textColor="@color/text_caption"
            android:textSize="@dimen/text_caption"
            android:paddingTop="7dp"
            android:paddingBottom="13dp"
            />

        <TextView
            android:id="@+id/comment_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="茶，属于山茶科，为常绿灌木或小乔木植物，植株高达1-6米，"
            android:textSize="@dimen/text_body"
            android:textColor="@color/text_body"
            android:lineSpacingExtra="3dp"
            android:layout_marginBottom="13dp"
            />

        <ListView
            android:id="@+id/comment_reply_lv"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:dividerHeight="0dp"
            android:divider="#00000000"
            android:visibility="gone"
            />

    </LinearLayout>

</RelativeLayout>