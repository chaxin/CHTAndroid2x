<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="18dp">

    <ImageView
        android:id="@+id/status_avatar"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginRight="15dp"
        android:scaleType="centerCrop"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/status_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/status_avatar"
        android:textSize="@dimen/text_body"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/status_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/status_avatar"
        android:layout_toRightOf="@id/status_avatar"
        android:text="28分钟  来自iphone 6 Plus"
        android:textColor="@color/text_caption"
        android:textSize="@dimen/text_caption" />

    <TextView
        android:id="@+id/status_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="删除"
        android:textSize="@dimen/text_body"
        android:textColor="@color/primary"
        android:drawableLeft="@drawable/icon_coterie_delete"
        android:drawablePadding="4dp"
        android:layout_marginLeft="4dp"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/status_source"
        android:visibility="gone"
        />
</RelativeLayout>