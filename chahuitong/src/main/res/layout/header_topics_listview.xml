<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/module_title_height"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/today_topic"
            android:textColor="@color/primary"
            android:textSize="@dimen/title_text_size"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/leader_everyday_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/everyday_topic"
            android:textColor="@color/caption"
            android:textSize="@dimen/caption_text_size"
            android:layout_centerVertical="true"
            android:paddingRight="10dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/stroke"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>

    <include
        layout="@layout/include_gridview_images"
        android:background="@android:color/white"
        />

    <include layout="@layout/include_topic_item"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@color/backcolor"
        />


</LinearLayout>